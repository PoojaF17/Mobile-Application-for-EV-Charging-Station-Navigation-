rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /ev_stations/{docId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
